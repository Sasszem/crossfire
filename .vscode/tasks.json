{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build & test",
            "type": "shell",
            "command": "moon build.moon test && code ./build/luacov.report.out",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Clean project",
            "type": "shell",
            "command": "moon build.moon clean",
            "problemMatcher": []
        },
        {
            "label": "Run linter",
            "type": "shell",
            "command": "moon build.moon lint",
            "problemMatcher": []
        },
        {
            "label": "Build doc",
            "type": "shell",
            "command": "ldoc src",
            "problemMatcher": []
        }
    ]
}